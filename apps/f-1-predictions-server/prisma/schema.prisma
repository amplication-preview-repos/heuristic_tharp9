datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bet {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  amount            Float?
  prediction        Json?
  user              User?    @relation(fields: [userId], references: [id])
  userId            String?
  race              Race?    @relation(fields: [raceId], references: [id])
  raceId            String?
  userReference     String?
  raceReference     String?
  predictionDetails Json?
  userRelation      String?
  raceRelation      String?
}

model Race {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  date      DateTime?
  location  String?
  results   Json?
  schedule  String?
  bets      Bet[]
}

model League {
  id                String            @id @default(cuid())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  name              String?
  users             EnumLeagueUsers[]
  predictionHistory Json?
  points            Int?
  races             EnumLeagueRaces[]
}

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  firstName   String?
  lastName    String?
  username    String   @unique
  email       String?  @unique
  password    String
  roles       Json
  bets        Bet[]
  nickname    String?
  familyName  String?
  displayName String?
  givenName   String?
}

enum EnumLeagueUsers {
  Option1
}

enum EnumLeagueRaces {
  Option1
}
